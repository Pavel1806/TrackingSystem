@model List<UserViewModel>


<div class="General" style="width: 730px; margin: 125px auto; background-color: #d5e8d4; padding-bottom: 10px; border: 1px solid grey;">
    <div class="Users">
        Заявки
    </div>
    <div class="divMenu">
        <!-- <div class="imgButtonLeft">
        <a href="/register/index"><img src="Plus.png"></a>
    </div> -->
        <div class="imgButton">
            <!-- <button class="edit"><img src="change.png"></button> -->
            <a href="#popup" class="popup_link"><img src="/change.png"></a>
        </div>
        <div class="imgButton">
            <button class="delete"><img src="/del.png"></button>

        </div>
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Фамилия">
        <div class="imgButton" style="margin: 0 10px 0 10px"><a href="/home/index">Задачи</a></div>
    </div>
    <div class="divTable">
        <table id="myTable">
            <tr class="header">
                <th>
                    Имя пользователя
                </th>
                <th>
                    Фамилия
                </th>

            </tr>
            @foreach (var item in Model)
            {
                <tr position="Roman">
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.SerName
                    </td>

                </tr>
            }

        </table>
    </div>
    <div class="divInput">
        <div>
            <p>Форма добавления Пользователя</p>
        </div>
        <form action="~/User/AddingNewUser" method="post" id="form" style="display: flex; justify-content: center;">

            <div style="width: 140px">
                <label>
                    Имя:
                    <input type="text" name="name" placeholder="Имя">
                </label>
            </div>
            <div style="width: 140px">
                <label>
                    Фамилия:
                    <input type="text" name="sername" placeholder="Фамилия">
                </label>
            </div>

            <div style="width: 140px">
                <button class="formRequest" type="submit">Добавить</button>
            </div>
        </form>
    </div>
</div>
